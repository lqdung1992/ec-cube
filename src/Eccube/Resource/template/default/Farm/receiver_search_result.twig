{% if Customers|length  %}
<ul class="list-group">
    {% for TargetCustomer in Customers %}
        <li class="list-group-item line-height15">
            <input type="hidden" name="search_farmer" value="{{ url('set_farm_discount', {'id': TargetCustomer.id}) }}">
            <img src="{{ app.config.image_save_urlpath }}/{{ TargetCustomer.profile_image|no_image_product }}" class="img-circle profile50">
            <span class="profile-name-medium">{{ TargetCustomer.__toString }}</span>
            <span class="profile-address-medium">{{ TargetCustomer.Pref.name }}{{ TargetCustomer.addr01 }}{{ TargetCustomer.addr02 }}</span>
            {% set discount = app.user.displayDiscount(TargetCustomer.id) %}
            {% if discount %}
                <label class="follow badge float-right">
                    {{ discount }}
                </label>
            {% endif %}
            <img src="{{ app.config.front_urlpath }}/yasai-bus/img/icon/arrow.png" class="float-right margin-top-30">
        </li>
    {% endfor %}
</ul>
{% endif %}
