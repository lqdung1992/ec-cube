{% block main %}
    <div class="wrapper" id="service-regist-receiver-wrapper">
        <div class="farmer-new-header">
            <img src="{{ app.config.front_urlpath }}/yasai-bus/img/icon/nav-menu.svg" class="hambuger-menu-reicever">
            <img src="{{ app.config.front_urlpath }}/yasai-bus/img/icon/nav-home.svg" class="nav-home">
            <img src="{{ app.config.front_urlpath }}/yasai-bus/img/icon/logo.svg" class="logo-svg">
        </div>

        <div id="service-form">
            <div class="farmer-profile">
                {% if Customer.CustomerImage %}
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            {% for image in Customer.CustomerImage %}
                                <!-- Wrapper for slides -->
                                <div class="item {% if loop.index == 1 %}active{% endif %}">
                                    <img src="{{ app.config.image_save_urlpath }}/{{ image.file_name }}" alt="Cover" style="width:100%;">
                                </div>
                            {% endfor %}
                        </div>

                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                {% else %}
                    <img src="">
                {% endif %}
            </div>

            <div id="receiver-profile" class="clearfix">
                <div class="col-sm-12 col-xs-12">
                    <button class="btn btn-success float-right farmer-follow-btn">フォロー中</button>
                    {% set img = app.config.front_urlpath ~ '/yasai-bus/img/camera.PNG' %}
                    {% if Customer.profile_image %}
                        {% set img = app.config.image_save_urlpath ~'/'~ Customer.profile_image %}
                    {% endif %}
                    <img id="upload-image" src="{{ img|default(app.config.front_urlpath ~ '/yasai-bus/img/camera.PNG')}}" alt="profile" class="img-circle medium-profile">

                    <span class="profile-name-medium color222 title16">{{ Customer.__toString }}農園</span>
                    <span class="profile-address-medium">{{ Customer.Pref.name }}{{ Customer.addr01 }}{{ Customer.addr02 }}</span>
                </div>
            </div>
            <div id="farmer-profile-description" class="clearfix">
                <div class="col-sm-12 col-xs-12">
                    {{ Customer.note|nl2br }}
                </div>
            </div>

            <div class="exhibition">
            <div class="row">
                <div class="col-sm-12 col-xs-12">
                    <ul class="list-inline">
                        <li class="list-2item text-alight-center enable">出品中</li>
                        <li class="list-2item text-alight-center disable">みんなの声</li>
                    </ul>
                </div>
            </div>
