{% extends 'default_frame.twig' %}

{% block main %}
    <div class="wrapper">
        <div class="farmer-header">
            <img src="{{ app.config.front_urlpath }}/yasai-bus/img/icon/logo.svg" class="margin-top10">
        </div>
        <div id="service-form">
            <form name="form1" id="form1" method="post" action="{{ url('forgot') }}">
                {{ form_widget(form._token) }}
                <div id="top_box__body_inner" class="col-sm-12 col-xs-12">
                    <div class="form-group">
                        {{ form_label(form.login_email) }}
                        {{ form_widget(form.login_email) }}
                        {{ form_errors(form.login_email) }}
                    </div>
                </div>
                {% for f in form %}
                    {% if f.vars.name matches '[^plg*]' %}
                        <div class="extra-form dl_table">
                            {{ form_row(f) }}
                        </div>
                    {% endif %}
                {% endfor %}

                <button type="submit" class="btn btn-inactive margin-left13">送信する</button>
                <p class="margin-top15 clearfix title12 text-alight-center">ご登録に使用したメールアドレス宛に</p>
                <p class="title12 text-alight-center">パスワード再設定用のURLが記載されたメールが届きます</p>
            </form>
        </div>
    </div>

{% endblock %}
